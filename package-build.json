{
  "main": "html/index.html",
  "name": "FMedia",
  "version": "1.0.0",
  "author": "mystermangit",
  "license": "FM",
  "description": "The program can batch process media such as video, audio, image.",
  "nodejs": true,
  "single-instance": false,
  "chromium-args": "--enable-webgl --ignore-gpu-blacklist",
  "build": {
    "appId": "github.com.mystermangit.fupconvert.project",
    "nwVersion": "0.28.1",
    "packed": true,
    "targets": [
      "zip",
      "nsis7z"
    ],
    "strippedProperties": [
      "build"
    ],
    "outputPattern": "${NAME} ${VERSION} ${PLATFORM} ${ARCH}",
    "win": {
      "productName": "winFm",
      "companyName": "nwjs-builder-phoenix",
      "copyright": "copyright",
      "icon": "./css/icon.ico"
    },
    "mac": {
      "displayName": "macFm",
      "copyright": "copyright",
      "icon": "./css/icon.icns",
      "plistStrings": {
        "CFBundleIdentifier": "github.com.mystermangit.fupconvert.project.modified",
        "CFBundleDocumentTypes": []
      }
    },
    "nsis": {
      "installDirectory": "$PROGRAMFILES\\${_COMPANYNAME}\\${_APPNAME}",
      "diffUpdaters": true
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "build --mac --x64 --mirror https://npm.taobao.org/mirrors/nwjs/ .",
    "dist": "build --tasks win-x64,mac-x64 --mirror https://dl.nwjs.io/ .",
    "start": "run --x86 --mirror https://dl.nwjs.io/ ."
  },
  "window": {
    "show": true,
    "width": 320,
    "height": 180,
    "title": "媒体处理器",
    "icon": "./css/icon.png",
    "toolbar": false,
    "resizable": true,
    "show_in_taskbar": true,
    "frame": false,
    "kiosk": false,
    "position": "center"
  },
  "webkit": {
    "plugin": true
  },
  "devDependencies": {
    "nwjs-builder-phoenix": "^1.14.6",
    "typescript": "^2.7.1"
  }
}
